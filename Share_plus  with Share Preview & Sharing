    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Update preview when form changes
            document.getElementById('update-preview').addEventListener('click', updatePreview);
            
            // Share button click handler
            document.getElementById('share-button').addEventListener('click', shareContent);
            
            // Input fields update preview on change
            document.querySelectorAll('#share-title, #share-text, #share-url').forEach(input => {
                input.addEventListener('input', updatePreview);
            });
            
            function updatePreview() {
                const title = document.getElementById('share-title').value;
                const text = document.getElementById('share-text').value;
                const url = document.getElementById('share-url').value;
                
                document.getElementById('preview-title').textContent = title;
                document.getElementById('preview-description').textContent = text;
            }
            
            async function shareContent() {
                const title = document.getElementById('share-title').value;
                const text = document.getElementById('share-text').value;
                const url = document.getElementById('share-url').value;
                
                const shareData = {
                    title: title,
                    text: text,
                    url: url
                };
                
                try {
                    if (navigator.share && navigator.canShare(shareData)) {
                        await navigator.share(shareData);
                        showSuccess();
                    } else {
                        // Fallback for browsers that don't support Web Share API
                        const combinedText = `${title}\n\n${text}\n\n${url}`;
                        await navigator.clipboard.writeText(combinedText);
                        alert('Content copied to clipboard! You can now paste it anywhere.');
                        showSuccess();
                    }
                } catch (err) {
                    console.error('Error sharing:', err);
                }
            }
            
            function showSuccess() {
                const resultDiv = document.getElementById('share-result');
                resultDiv.classList.remove('hidden');
                setTimeout(() => {
                    resultDiv.classList.add('hidden');
                }, 3000);
            }
        });
    </script>
</body>
</html>
